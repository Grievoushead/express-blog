extends ../layout

block content
  h1 Articles
  -if (isAdmin) 
    a(href='/blog/add') add
  br
  for article in articles
    article
      .post-preview
        a(href='/blog/#{article.id}/show')
          h2.post-title #{article.title}
          h3.post-subtitle #{article.sub}
        a(href='/blog/#{article.id}/edit') edit
        p.post-meta
          Posted by&nbsp;
          a(href='/about') #{article.user}
          &nbsp;#{moment(article.created).calendar()}
      hr

  // Pager
  ul.pager
    li.next
      a(href='#') Older Posts &rarr;
  

  
